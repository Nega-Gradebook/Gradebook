 

<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Teacher:</strong>
  <%= @student.teacher_id %>
</p>

<table>
  <thead>
    <tr>
      <th>Assignment Name</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student.grades.each do |grade| %>
      <tr>
        <td><%= grade.assignment_name %></td>
        <td><%= grade.grade %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%= link_to 'Edit Your Student Password', edit_student_path %></div>
<div><%= link_to 'Edit Your Parent Password', edit_parent_path %></div>
