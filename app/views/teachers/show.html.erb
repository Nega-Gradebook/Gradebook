<p id="notice"><%= notice %></p>

<p>
  <h2><strong>Name: </strong><%= @teacher.name %></h2>
</p>

<p>
  <h2><strong>Email: </strong><%= @teacher.email %></h2>
</p>

<table>
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Student Assignments</th>
      <th>Student Grades</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher.students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <% @teacher.grades.each do |g| %>

        <td><%= g.assignment_name %></td>
        <td><%= g.grade %></td>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>

<div><%= link_to 'Dashboard', dashboard_index_path%></div>
